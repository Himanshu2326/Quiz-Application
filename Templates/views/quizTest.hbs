<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Mochiy+Pop+One&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Mochiy+Pop+One&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Luckiest+Guy&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Murecho:wght@100..900&family=Noto+Sans+KR:wght@100..900&family=Varta:wght@300..700&display=swap');

        body {
            font-family: "Poppins", sans-serif;
        }


        :root {
            --btn-gradient1: linear-gradient(to right, #5735f9, #7f3cc2);
            --btn-gradient-rev: linear-gradient(to right, #7f3cc2, #5735f9);
        }


        #Navbar {
            height: 65px;
            width: 100%;
            background: white;
            z-index: 10;
            box-shadow: 0px 0px 5px 0px #910cdf;
            position: fixed;
            display: flex;
            justify-content: space-between;
        }

        .Logo img {
            height: 65px;
        }

        .Links-Section ul {
            display: flex;
            flex-direction: row;
        }

        .Links-Section li {
            padding: 0px 10px;
            font-size: 1.1rem;
            font-weight: 500;
            margin: 0 10px;
            transition: .3s;

        }

        .Links-Section li a {
            color: #923be9;
            transition: .3s;
            border-radius: 20px;

        }

        .Links-Section li a:hover {
            color: white;
            background: var(--btn-gradient1);
            transition: .3s;
            padding: 7px 10px;
            border-radius: 20px;
        }

        .Links-Section li .active {
            color: white;
            background: var(--btn-gradient1);
            transition: .3s;
            padding: 7px 10px;
            border-radius: 20px;
        }

        .button {
            border: none;
            background: var(--btn-gradient1);
            color: white;
            padding: 7px;
            border-radius: 20px;
            font-size: 1.1rem;
            width: 8rem;
            margin: 1rem 0;
            transition: 0.3s ease-in-out;
        }

        .logout-button {
            border: none;
            background: var(--btn-gradient-rev);
            color: white;
            padding: 7px 10px;
            border-radius: 20px;
            font-size: 1rem;
            transition: 0.3s ease-in-out;
            width: 10rem;
        }


        .button:hover,
        .logout-button:hover {
            background: var(--btn-gradient1);
            scale: 1.05;
            transition: 0.3s ease-in-out;
        }

        .Back-Btn {
            border: none;
            background: linear-gradient(to right, #dbddff, #f2e3ff);
            color: black;
            padding: 7px;
            border-radius: 20px;
            font-size: 0.9rem;
            width: 7rem;
            transition: 0.3s ease-in-out;
        }

        .Back-Btn:hover {
            background: linear-gradient(to right, #f5ebff, #edfff7);
            color: #7d35f9;
            scale: 1.03;
            box-shadow: 0px 0px 5px 0.2px #7d35f9;
            transition: .3s;
        }

        .question {
            background: linear-gradient(to right, #5735f9, #7f3cc2);
            color: white;
            padding: 5px 15px;
            border-radius: 8px;
            font-size: 1.8rem;
            margin-bottom: 15px;
            margin-top: 5px;

        }

        .option {
            font-size: 1.15rem;
        }

        @media (max-width:768px) {

            .question {
                font-size: 1.4rem;
            }

            .quizTest-Section {
                padding: 2rem !important;
            }

        }

        @media (max-width:500px) {

            .question {
                font-size: 1rem;
            }

            .quizTest-Section {
                padding: 2.5rem 1.5rem !important;
            }

            .option {
                font-size: 0.8rem;
            }

            #Navbar {
                padding: 1rem !important;
            }

            .button {
                padding: 6px;
                border-radius: 10px;
                font-size: 1rem;
                width: 6rem;
            }

            .Links-Section li .active {
                padding: 5px 10px;
                font-size: 0.9rem;
            }

            .Links-Section li {
                font-size: 1rem;
                margin: 0 0px;
            }

            .Back-Btn {
                padding: 6px;
                border-radius: 10px;
                font-size: 0.8rem;
                width: 5rem;
            }
        }
    </style>
    <title>Student Dashboard</title>
</head>

<body>

    {{!--? Navbar --}}

    <nav id="Navbar" class="px-5">

        <div class="Links-Section d-flex align-items-center justify-content-center">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link text-black-10 active text-capitalize" href="#">{{studentData.name}} <span
                            class="sr-only">(current)</span></a>
                </li>

            </ul>
        </div>
        <div class="Logout-Section d-flex align-items-center">
            <div>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <Button class="Back-Btn">Go Back</Button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <section
        class="section quizTest-Section px-5 py-5 d-flex flex-column align-items-center justify-content-center w-100 h-100">

        <form action="/quizTestSubmit" class="py-5">
            <div class="Quizs">


                {{#each quiz as |quiz index| }}

                {{#each quiz.questions as |Questions index| }}
                <div class="Quiz">

                    <h1 class="question" id="{{Questions._id}}">Q: {{Questions.question}}</h1>

                    <div class="options">

                        {{#each Questions.options as |options key| }}

                        <div class="option">
                            <input type="checkbox" name="option" class="option" id="{{options._id}}"
                                value="{{options.option}}"> {{options.option}}</input>
                        </div>

                        {{/each}}

                    </div>


                </div>

                {{/each}}
                {{!-- {{/each}} --}}
            </div>



            {{!-- {{#each quiz as |quiz index| }} --}}
            <input type="hidden" name="student_Name" value="{{../studentData.name}}">
            <input type="hidden" name="student_email" value="{{../studentData.email}}">
            <input type="hidden" name="Quiz_title" value="{{quiz.title}}">
            <input type="hidden" name="Quiz_Id" value="{{quiz._id}}">
            <input type="hidden" name="Student_Ans" value="">


            <button type="submit" class="submitBtn button" onclick="fun()">Submit</button>
            {{!-- <input type="hidden" name="Quiz_title" value="{{../quiz.title}}"> --}}
            {{/each}}


        </form>


    </section>

</body>

</script>

<script>

    let student_Quiz_Submit = [];
    let submitBtn = document.querySelector('.submitBtn');
    let questions = document.querySelectorAll('.question');
    let options = document.querySelectorAll('.option');

    function fun() {

        options.forEach((e) => {
            if (e.checked) {
                const Question = e.parentElement.parentElement.parentElement.firstElementChild.id;
                const option = e.id;

                student_Quiz_Submit.push({ Question, option });

            }
        })
        const studentAnswersString = JSON.stringify(student_Quiz_Submit);
        document.querySelector('input[name="Student_Ans"]').value = studentAnswersString;
    }


    /*
    ========================
    * Go Back Button  
    ========================
    */

    let BackBtns = document.querySelector('.Back-Btn');
    BackBtns.addEventListener('click', () => {
        window.history.back()
    })


</script>

